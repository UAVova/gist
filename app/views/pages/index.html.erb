<div class="container" style="margin-top:60px;background:white">
  <div class="row">
    <div class="col-12">
      <% flash.each do |type, message| %>
        <div class="alert alert-<%= type %> alert-dismissible fade show" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <%= message %>
        </div>
      <% end %>
      <% @snippets.each do |snippet| %>
        <div class="snippet">
          <h4 class="snippet-title"><a href="<%= snippet_path(snippet.id)%>"><%= snippet.title %></a></h4>
          <div class="snippet-history">Snippet originally posted by <span class="snippet-owner"><%= link_to snippet.user.username.capitalize, user_snippets_path(snippet.user) %></span> | <time><%= snippet.created_at.to_date %></time></div>
          <pre><code class="<%= snippet.language unless snippet.language.nil? %>"><%= snippet.content %></code></pre>
        </div>
        <hr>
      <% end %>
      <%= paginate @snippets, right: 1, left: 1 %>
    </div>
  </div>
</div>
